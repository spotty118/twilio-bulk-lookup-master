# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# === Core Application ===
RAILS_ENV=development
RAILS_MASTER_KEY=
DATABASE_URL=postgres://postgres@localhost:5432/bulk_lookup_development
REDIS_URL=redis://localhost:6379/0

# === ActiveRecord Encryption (REQUIRED) ===
# Generate these with: rails db:encryption:init
# Store securely - losing these makes encrypted data unreadable!
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=

# === Twilio Core (REQUIRED) ===
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# === Business Intelligence APIs (Optional) ===
CLEARBIT_API_KEY=sk-xxxxxxxxxxxx
NUMVERIFY_API_KEY=your_numverify_key

# === Email Discovery APIs (Optional) ===
HUNTER_API_KEY=your_hunter_key
ZEROBOUNCE_API_KEY=your_zerobounce_key

# === Address and Location APIs (Optional) ===
WHITEPAGES_API_KEY=your_whitepages_key
